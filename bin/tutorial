#!/usr/bin/env ruby

$: << './lib' << '../lib'

require 'xrb'
require 'pp'

Xrb.run do |conn|
  screen = conn.setup.roots.first

  window = Xrb::Window.new(conn, width: 150, height: 150,
      value: {Xrb::CW_BACK_PIXEL => screen.white_pixel,
               Xrb::CW_EVENT_MASK =>
                  Xrb::EVENT_MASK_EXPOSURE | Xrb::EVENT_MASK_BUTTON_PRESS |
                  Xrb::EVENT_MASK_KEY_RELEASE})
  window.show
end
