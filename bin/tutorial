#!/usr/bin/env ruby

$: << './lib' << '../lib'

require 'xrb'
require 'pp'

conn = Xrb.connect(nil, nil)
setup = Xrb.get_setup(conn)
iter = Xrb.setup_roots_iterator(setup)

screen = Xrb::Screen.new(iter)

window = Xrb.generate_id(conn)

mask = Xrb::CW_BACK_PIXEL | Xrb::CW_EVENT_MASK
values = [screen[:white_pixel], Xrb::EVENT_MASK_EXPOSURE]
ptr = FFI::MemoryPointer.new(:uint32, values.size)

Xrb.create_window(conn, Xrb::COPY_FROM_PARENT, window, screen[:root],
    0, 0, 150, 150, 10, Xrb::WINDOW_CLASS_INPUT_OUTPUT, screen[:root_visual],
    mask, ptr)

Xrb.map_window(conn, window)
Xrb.flush(conn)

while (true)

end